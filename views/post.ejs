<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="css/bootstrap/css/bootstrap.css"/>
    <link rel="stylesheet" type="text/css" href="css/admin.css" />
    <link rel="icon" type="icon" href="img/seww.ico" />
    <script src="js/Jquery.js"></script>
    <script src="css/bootstrap/js/bootstrap.js"></script>
    <title>Control Page</title>
</head>
<body>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <a class="navbar-brand" href="#"><img src="img/sew.png" id="sew"/> Claudio & Clothing</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/orders">Orders</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout" id="logout">Logout</a>
                </li>
            </ul>

        </div>
    </nav>
    <div id="form" class="container">
        <div class="row" id="login">
        <div class="col-12">
            <div>
               <h5 class="card-title">Add Product</h5>
               <form action="/add" method="POST" enctype="multipart/form-data">
                   Image <input type="file" name="image" placeholder="Image"/><br><br>
                   Comment  <input type="text" name="comment" placeholder="Comment"/><br><br>
                   Price <input type="text" name="price" placeholder="price"/><br><br>
                   <input type="submit" class="btn btn-primary" id="submit"/>
               </form>
            </div>
        </div>
        </div>
        </div>

        <script>
            document.getElementById('submit').addEventListener('click', function(){ alert('Clothing created successfully'); });
            document.getElementById('logout').addEventListener('click', function(){ alert('Successfully Logged Out'); });
        </script>

        <div class="container" id="remove">
            <h3>Remove Item</h3><br>
            <% for(var i = 0; i < clothings.length; i++){ %>
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <form action="/remove/<%= clothings[i]._id%>?_method=DELETE" method="post">
                            <div class="form-group">
                                <img src="<%= clothings[i].image %>" id="item"/>
                            </div>
                            <div class="form-group">
                                <%= clothings[i].comment %>
                            </div>
                            <div class="form-group">
                                <%= clothings[i].price %>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primay h" id="btnn">Delete</button>
                            </div>
                        </form>
                        
                    </div>
                </div>
            <% }; %>
        </div>
        <script>
            document.getElementById('btnn').addEventListener('click', function(){ alert('Deleted Successfully'); });
        </script>
</body>
</html>