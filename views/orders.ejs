<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Orders</title>
  <link rel="stylesheet" type="text/css" href="/css/bootstrap/css/bootstrap.css"/>
  <link rel="stylesheet" type="text/css" href="/css/orders.css" />
  <link rel="icon" type="icon" href="/img/seww.ico" />
  <script src="/js/Jquery.js"></script>
  <script src="/css/bootstrap/js/bootstrap.js"></script>
</head>
<body>
  <div class="container">
    <div id="orders">
      <% for(var e = 0; e < orders.length; e++){ %>
        <% var clothings = orders[e].clothings; %>
        <% for(var i = 0; i < clothings.length; i++){ %>
          <img src="<%= clothings[i].image %>" id="img"/>
        <% }; %>
        <div id="order">
          <form action="/delete/<%=orders[e]._id%>" method="POST">
            <div class="form-group">

            </div>
            <div class="form-group">
              Neck:<%= orders[e].neck%>
            </div>
            <div class="form-group">
              Shoulder:<%= orders[e].shoulder%>
            </div>
            <div class="form-group">
              Chest:<%= orders[e].chest%>
            </div>
            <div class="form-group">
              Waist:<%= orders[e].waist%>
            </div>
            <div class="form-group">
              Hips:<%= orders[e].hips%>
            </div>
            <div class="form-group">
              Arm:<%= orders[e].arm%>
            </div>
            <div class="form-group">
              Inseam:<%= orders[e].inseam%>
            </div>
            <div class="form-group">
              Name:<%= orders[e].name%>
            </div>
            <div class="form-group">
              Phone:<%= orders[e].phone%>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-danger" id="btn">Delete</button>
            </div>
          </form>
        </div>

      <% } %>
    </div>
  </div>
  <script>
    document.getElementById('btn').addEventListener('click', function(){ alert('deleted successfully'); });
  </script>
</body>
</html>
